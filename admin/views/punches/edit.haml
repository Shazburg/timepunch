.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:punches, :index)
      %li=link_to pat(:new), url(:punches, :new)
      %li.active=link_to pat(:edit), url(:punches, :edit, :id => @punch.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:punch)
    .inner
      -form_for :punch, url(:punches, :update, :id => @punch.id), :method => :put, :class => :form do |f|
        =partial "punches/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")