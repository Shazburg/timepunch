.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:employees, :index)
      %li=link_to pat(:new), url(:employees, :new)
      %li.active=link_to pat(:edit), url(:employees, :edit, :id => @employee.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:employee)
    .inner
      -form_for :employee, url(:employees, :update, :id => @employee.id), :method => :put, :class => :form do |f|
        =partial "employees/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")